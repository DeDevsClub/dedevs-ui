{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "extends": ["ultracite"],
  "files": {
    "ignore": [
      "packages/shadcn-ui/components/ui/**",
      "packages/shadcn-ui/lib/**",
      "packages/shadcn-ui/hooks/**"
    ]
  },
  "linter": {
    "rules": {
      "suspicious": {
        "noConsoleLog": "off",
        "noConsole": "off"
      },
      "nursery": {
        "noNestedTernary": "off",
        "useSortedClasses": "off"
      },
      "a11y": {
        "useButtonType": "off"
      },
      "correctness": {
        "noUnusedImports": "off"
      },
      "complexity": {
        "noUselessLoneBlockStatements": "off"
      },
      "performance": {
        "useTopLevelRegex": "off"
      }
    }
  }
}
